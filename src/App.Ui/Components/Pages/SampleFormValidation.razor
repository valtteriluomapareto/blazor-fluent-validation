@page "/sample-form"
@using global::App.Contracts
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Sample Form</PageTitle>

<h1>Sample Form</h1>

<p>Validates using <code>SampleFormValidator</code> via Blazilla's <code>FluentValidator</code> component.</p>

<div class="alert alert-secondary">
    <strong>Testing guide</strong>
    <ul class="mb-0">
        <li><strong>Local UI rules:</strong> leave Name empty or Age below 18 to see immediate client-side errors.</li>
        <li><strong>Server rule-set:</strong> use Name <code>Server</code> with a valid Age to trigger API validation.</li>
        <li><strong>Endpoint-only check:</strong> use Name <code>ApiOnly</code> with a valid Age to trigger API-only validation.</li>
    </ul>
</div>

<EditForm EditContext="_editContext" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
    <FluentValidator RuleSets="@(new[] { "Local" })" />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <InputText id="name" class="form-control" @bind-Value="_model.Name" />
        <ValidationMessage For="() => _model.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label" for="age">Age</label>
        <InputNumber id="age" class="form-control" @bind-Value="_model.Age" />
        <ValidationMessage For="() => _model.Age" />
    </div>

    <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">
        @(_isSubmitting ? "Submitting..." : "Submit")
    </button>

    @if (!string.IsNullOrWhiteSpace(_submitMessage))
    {
        <div class="alert alert-info mt-3" role="status">
            @_submitMessage
        </div>
    }
</EditForm>

@code {
    private readonly SampleForm _model = new();
    private EditContext _editContext = null!;
    private ValidationMessageStore? _messageStore;
    private string? _submitMessage;
    private bool _isSubmitting;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_model);
        _messageStore = new ValidationMessageStore(_editContext);
        _editContext.OnFieldChanged += (_, args) =>
        {
            _messageStore?.Clear(args.FieldIdentifier);
            _editContext.NotifyValidationStateChanged();
            _submitMessage = null;
        };
    }

    private async Task HandleValidSubmit()
    {
        _submitMessage = null;
        _messageStore?.Clear();
        _editContext.NotifyValidationStateChanged();

        _isSubmitting = true;

        try
        {
            var client = HttpClientFactory.CreateClient("Api");
            var response = await client.PostAsJsonAsync("api/sample-form", _model);

            if (response.IsSuccessStatusCode)
            {
                var apiResponse = await response.Content.ReadFromJsonAsync<SampleFormResponse>();
                _submitMessage = apiResponse?.Message ?? "Form submitted.";
                return;
            }

            if ((int)response.StatusCode == StatusCodes.Status400BadRequest)
            {
                var problemDetails = await response.Content.ReadFromJsonAsync<ValidationProblemDetails>();
                if (problemDetails?.Errors is { Count: > 0 })
                {
                    foreach (var (field, messages) in problemDetails.Errors)
                    {
                        _messageStore?.Add(new FieldIdentifier(_model, field), messages);
                    }

                    _editContext.NotifyValidationStateChanged();
                    _submitMessage = "Please fix the validation errors.";
                    return;
                }
            }

            _submitMessage = "Server error. Please try again.";
        }
        catch (HttpRequestException)
        {
            _submitMessage = "Could not reach the API. Make sure App.Api is running on http://localhost:5113.";
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private void HandleInvalidSubmit()
    {
        _submitMessage = "Please fix the validation errors.";
    }
}
