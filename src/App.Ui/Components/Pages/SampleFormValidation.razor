@page "/sample-form"
@using global::App.Contracts
@using Microsoft.AspNetCore.Http
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Sample Form</PageTitle>

<div class="space-y-6">
    <div class="space-y-2">
        <h1>Sample Form</h1>
        <p class="text-slate-600">Validates using <code>SampleFormValidator</code> via Blazilla's <code>FluentValidator</code> component.</p>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
        <p class="text-sm font-semibold text-slate-700">Testing guide</p>
        <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-slate-600">
            <li><strong>Local UI rules:</strong> leave Name empty or Age below 18 to see immediate client-side errors.</li>
            <li><strong>Server rule-set:</strong> use Name <code>Server</code> with a valid Age to trigger API validation.</li>
            <li><strong>Integration lookup:</strong> use Name <code>Taken</code> with a valid Age to trigger async validation.</li>
            <li><strong>Endpoint-only check:</strong> use Name <code>ApiOnly</code> with a valid Age to trigger API-only validation.</li>
        </ul>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
        <EditForm EditContext="_editContext" OnSubmit="HandleSubmit" class="space-y-5">
            <FluentValidator AsyncMode="true" RuleSets="@(new[] { "Local" })" />
            <ValidationSummary class="rounded-md border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700 empty:hidden" />

            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700" for="name">Name</label>
                <InputText id="name" class="w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200" @bind-Value="_model.Name" />
                <ValidationMessage For="() => _model.Name" class="text-sm text-rose-600" />
            </div>

            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700" for="age">Age</label>
                <InputNumber id="age" class="w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-200" @bind-Value="_model.Age" />
                <ValidationMessage For="() => _model.Age" class="text-sm text-rose-600" />
            </div>

            <div class="flex items-center gap-3">
                <button type="submit" class="inline-flex items-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800 disabled:cursor-not-allowed disabled:opacity-60" disabled="@_isSubmitting">
                    @(_isSubmitting ? "Submitting..." : "Submit")
                </button>
                <span class="text-xs text-slate-500">Server: <code>http://localhost:5113</code></span>
            </div>

            @if (!string.IsNullOrWhiteSpace(_submitMessage))
            {
                <div class="rounded-md border border-sky-200 bg-sky-50 px-4 py-3 text-sm text-sky-800" role="status">
                    @_submitMessage
                </div>
            }
        </EditForm>
    </div>
</div>

@code {
    private readonly SampleForm _model = new();
    private EditContext _editContext = null!;
    private ValidationMessageStore? _messageStore;
    private string? _submitMessage;
    private bool _isSubmitting;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_model);
        _messageStore = new ValidationMessageStore(_editContext);
        _editContext.OnFieldChanged += (_, args) =>
        {
            _messageStore?.Clear(args.FieldIdentifier);
            _editContext.NotifyValidationStateChanged();
            _submitMessage = null;
        };
    }

    private async Task HandleSubmit(EditContext editContext)
    {
        _submitMessage = null;
        _messageStore?.Clear();
        editContext.NotifyValidationStateChanged();

        var isValid = await editContext.ValidateAsync();
        if (!isValid)
        {
            _submitMessage = "Please fix the validation errors.";
            return;
        }

        _isSubmitting = true;

        try
        {
            var client = HttpClientFactory.CreateClient("Api");
            var response = await client.PostAsJsonAsync("api/sample-form", _model);

            if (response.IsSuccessStatusCode)
            {
                var apiResponse = await response.Content.ReadFromJsonAsync<SampleFormResponse>();
                _submitMessage = apiResponse?.Message ?? "Form submitted.";
                return;
            }

            if ((int)response.StatusCode == StatusCodes.Status400BadRequest)
            {
                var errorResponse = await response.Content.ReadFromJsonAsync<ValidationErrorResponse>();
                if (errorResponse?.Errors is { Count: > 0 })
                {
                    foreach (var (field, messages) in errorResponse.Errors)
                    {
                        _messageStore?.Add(new FieldIdentifier(_model, field), messages);
                    }

                    _editContext.NotifyValidationStateChanged();
                    _submitMessage = "Please fix the validation errors.";
                    return;
                }
            }

            _submitMessage = "Server error. Please try again.";
        }
        catch (HttpRequestException)
        {
            _submitMessage = "Could not reach the API. Make sure App.Api is running on http://localhost:5113.";
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
