@inherits LayoutComponentBase

<div class="min-h-screen bg-slate-50 text-slate-900 md:flex">
    <aside class="md:sticky md:top-0 md:h-screen md:w-64 bg-gradient-to-b from-slate-900 via-slate-900 to-slate-800 text-slate-100 shadow-lg">
        <NavMenu/>
    </aside>

    <div class="flex min-w-0 flex-1 flex-col">
        <header class="sticky top-0 z-10 border-b border-slate-200 bg-white/80 backdrop-blur">
            <div class="flex h-14 items-center justify-end px-6">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" rel="noreferrer" class="text-sm font-medium text-slate-600 hover:text-slate-900">About</a>
            </div>
        </header>

        <main class="flex-1 px-6 py-8">
            <article class="mx-auto w-full max-w-5xl">
                @Body
            </article>
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed inset-x-0 bottom-0 z-50 border-t border-slate-200 bg-white/95 px-4 py-3 text-sm text-slate-700 shadow-lg backdrop-blur">
    <div class="mx-auto flex w-full max-w-5xl items-center gap-3">
        <span class="inline-flex h-2 w-2 rounded-full bg-rose-500" aria-hidden="true"></span>
        <span class="flex-1">An unhandled error has occurred.</span>
        <a href="." class="reload font-medium text-sky-600 hover:text-sky-700">Reload</a>
        <button type="button" class="dismiss inline-flex h-7 w-7 items-center justify-center rounded-md text-slate-500 hover:bg-slate-100 hover:text-slate-700" aria-label="Dismiss">
            🗙
        </button>
    </div>
</div>
