@page "/sample-form"
@page "/sample-form-wasm"
@rendermode InteractiveWebAssembly
@using global::App.Contracts
@inject IApiFormSubmitter FormSubmitter
@implements IDisposable

<PageTitle>Sample Form</PageTitle>

<div class="space-y-6">
    <div class="space-y-2">
        <h1>Sample Form</h1>
        <p class="text-slate-600">Form validation demo using <code>SampleFormValidator</code> in WebAssembly.</p>
    </div>

    <FormCard>
        <p class="text-sm font-semibold text-slate-700">Testing guide</p>
        <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-slate-600">
            <li><strong>Validate on blur:</strong> click the Name field and then click elsewhere without typing to see the error appear.</li>
            <li><strong>Local UI rules:</strong> leave Name empty or Age below 18 to see immediate client-side errors.</li>
            <li><strong>Server rule-set:</strong> use Name <code>Server</code> with a valid Age to trigger API validation.</li>
            <li><strong>Integration lookup:</strong> use Name <code>Taken</code> with a valid Age to trigger async validation.</li>
            <li><strong>Endpoint-only check:</strong> use Name <code>ApiOnly</code> with a valid Age to trigger API-only validation.</li>
        </ul>
    </FormCard>

    <FormCard>
        <EditForm EditContext="_editContext" OnSubmit="HandleSubmit" class="space-y-5">
            <LocalizedFluentValidator AsyncMode="true" RuleSets="@(new[] { "Local" })" />
            <ValidationSummary class="rounded-md border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700 empty:hidden" />

            <FormTextField Id="name" Label="Name" ValidateOnBlur="true" UpdateOnInput="true" @bind-Value="_model.Name" />
            <FormNumberField Id="age" Label="Age" @bind-Value="_model.Age" />

            <div class="flex items-center gap-3">
                <button type="submit" class="inline-flex items-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800 disabled:cursor-not-allowed disabled:opacity-60" disabled="@_isSubmitting">
                    @(_isSubmitting ? "Submitting..." : "Submit")
                </button>
                <span class="text-xs text-slate-500">Server: <code>@FormSubmitter.ApiBaseUrl</code></span>
            </div>

            @if (!string.IsNullOrWhiteSpace(_submitMessage))
            {
                <div class="rounded-md border border-sky-200 bg-sky-50 px-4 py-3 text-sm text-sky-800" role="status">
                    @_submitMessage
                </div>
            }
        </EditForm>
    </FormCard>
</div>

@code {
    private readonly SampleForm _model = new();
    private EditContext _editContext = null!;
    private ValidationMessageStore? _messageStore;
    private string? _submitMessage;
    private bool _isSubmitting;
    private EventHandler<FieldChangedEventArgs>? _onFieldChanged;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_model);
        _messageStore = new ValidationMessageStore(_editContext);
        _onFieldChanged = (_, args) =>
        {
            _messageStore?.Clear(args.FieldIdentifier);
            _editContext.NotifyValidationStateChanged();
            _submitMessage = null;
        };
        _editContext.OnFieldChanged += _onFieldChanged;
    }

    private async Task HandleSubmit(EditContext editContext)
    {
        _submitMessage = null;

        _isSubmitting = true;

        try
        {
            if (_messageStore is null)
            {
                _submitMessage = "Unable to submit form.";
                return;
            }

            var result = await FormSubmitter.SubmitAsync(
                "api/sample-form",
                _model,
                editContext,
                _messageStore
            );
            _submitMessage = result.Message;
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    public void Dispose()
    {
        if (_onFieldChanged is not null)
        {
            _editContext.OnFieldChanged -= _onFieldChanged;
        }
    }
}
